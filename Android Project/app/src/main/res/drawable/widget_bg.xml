<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the solid color for the rectangle -->
    <solid android:color="#FF0000" />

    <!-- Set the corner radius for rounded corners (optional) -->
    <corners android:radius="8dp" />

    <!-- Set the stroke (border) for the rectangle (optional) -->

    <!-- Set padding if needed (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
